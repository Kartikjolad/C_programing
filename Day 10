#include<stdio.h>
void ptr_fu(int *ptr,int n);
int main()
{
int arr[50],num;
printf("Enter the size of array:\n");
scanf("%d",&num);
printf("Enter the %d number\n",num);
for(int i=0;i<num;i++)
{
    scanf("%d",&arr[i]);
}
ptr_fu(arr,num);
}
void ptr_fu(int *ptr,int n)
{printf("printing elements using pointer:\n");
    for(int i=0;i<n;i++)
    {
      printf("%d",*ptr+i);
    }
}


p133
#include<stdio.h>
void len_ptr_fu(char *ptr);
int main()
{
    char arr[50];
    printf("Enter the string:\n");
    scanf("%s",arr);
    //printf("%s",arr);
    len_ptr_fu(arr);
}
void len_ptr_fu(char *ptr)
{
    int len=0;
    for(int i=0; *(ptr+i)!='\0'; i++)
    {
        len++;
    }
    printf("%d",len);
}


