#include<stdio.h>
int call_fu(int *p,int *q);
int main()
{
    int num1=4,num2=5;
    printf("num1=%d\nnum2=%d\n",num1,num2);
    int *ptr1,*ptr2,res;
    ptr1=&num1;
    ptr2=&num2;
    call_fu(ptr1,ptr2);
}
int call_fu(int *p,int *q)
{
int *temp;
temp=*p;
*p=*q;
q=&temp;
printf("num1=%d\nnum2=%d",*p,*q);
}


p135
#include<stdio.h>
int fac_fu(int nu,int *res);
int main()
{
    int num,factorial;
    printf("Enter the number:\n");
    scanf("%d",&num);
    fac_fu(num,&factorial);
    return 0;
}
int fac_fu(int nu,int *res)
{
    *res=1;
    for(int i=1; i<=nu; i++)
    {
        *res=(*res)*i;
    }
    printf("factorial is %d",*res);
}


p136
#include<stdio.h>
void sort_fu(int *ptr,int size);
int main()
{
    int arr[50],size,i;
    printf("Enter the size of an array:\n");
    scanf("%d",&size);
    printf("Enter the %d numbers\n",size);
    for(i=0; i<size; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("array is:\n");
    for(i=0; i<size; i++)
    {
        printf("%d\t",arr[i]);
    }
    printf("\n");
    sort_fu(arr,size);
}

void sort_fu(int *ptr,int size)
{
    int i,j,temp=0;
    for(i=0; i<size; i++)
    {
        for(j=0; j<size; j++)
        {
            if(*(ptr+i)>*(ptr+j))
            {
                temp=*(ptr+i);
                *(ptr+i)=*(ptr+j);
                *(ptr+j)=temp;
            }
        }
    }
    printf("pointer value printing\n");
    for(i=0; i<size; i++)
    {
        printf("%d\t",*(ptr+i));
    }
}



p137
#include<stdio.h>
void sum_fu(int *ptr,int size);
int main()
{
    int arr[50],size,i;
    printf("Enter the size of an array:\n");
    scanf("%d",&size);
    printf("Enter the %d numbers\n",size);
    for(i=0; i<size; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("array is:\n");
    for(i=0; i<size; i++)
    {
        printf("%d\t",arr[i]);
    }
    printf("\n");
    sum_fu(arr,size);
}

void sum_fu(int *ptr,int size)
{

    int i,j,sum=0;
    for(i=0; i<size; i++)
    {
        sum+=*(ptr+i);
    }
    printf("sum of array elements is:");
    printf("%d",sum);
}

p138
#include<stdio.h>
void sum_fu(int *ptr,int size);
int main()
{
    int arr[50],size,i;
    printf("Enter the size of an array:\n");
    scanf("%d",&size);
    printf("Enter the %d numbers\n",size);
    for(i=0; i<size; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("array is:\n");
    for(i=0; i<size; i++)
    {
        printf("%d\t",arr[i]);
    }
    printf("\n");
    sum_fu(arr,size);
}

void sum_fu(int *ptr,int size)
{
    int i,j;
    printf("array in reverse order:\n");
    for(i=size-1; i>=0; i--)
    {
        printf("%d\t",*(ptr+i));
    }
}


p139
#include<stdio.h>
#include<string.h>
void string_len(char *name,int len);
int main()
{
    char name[50];
    int len=0;
    printf("Enter the character : ");
    scanf("%s",name);
    while(name[len]!='\0')
    {
        len++;
    }
    string_len(name,len);
}
void string_len(char *name,int len)
{
    printf("Reversed string is ");
    for(int i=len-1;i>=0;i--)
    {
        printf("%c",*(name+i));
    }

}


p140
#include<stdio.h>
void small_fu(int *numb,int size);
int main()
{
    int num,arr[100];
    printf("Enter the size:");
    scanf("%d",&num);
    printf("Enter the %d numbers\n",num);
    for(int i=0; i<num; i++)
    {
        scanf("%d",&arr[i]);
    }
    for(int i=0; i<num; i++)
    {
        printf("%d\t",arr[i]);
    }
    printf("\n");

    small_fu(arr,num);
}
void small_fu(int *numb,int size)
{
    int i,j,temp=0;
    for(i=0; i<size; i++)
    {
        for(j=1; j<size; j++)
        {
            if(*(numb+i)>*(numb+j))
            {
                temp=*(numb+i);
                *(numb+i)=*(numb+j);
                *(numb+j)=temp;
            }
        }
    }

    for(int k=1; k<size; k++)
    {
        printf("smallest number=%d",*numb);
        break;
    }
}



p141
#include<stdio.h>
sum_avg_fu(int arr[],int size);
int main()
{
    int num;
    printf("Enter the size of array:");
    scanf("%d",&num);
    int arr[num];
    printf("Enetr the %d numbers:\n",num);
    for(int i=0; i<num; i++)
    {
        scanf("%d",&arr[i]);
    }
    sum_avg_fu(arr,num);
}
sum_avg_fu(int arr[],int size)
{
    float sum=0,avg;
    for(int i=0; i<size; i++)
    {
        sum+=arr[i];
    }
    avg=sum/size;
    printf("average=%0.2f",avg);
}



