int call_fu(int ptr1,int ptr2);
int main()
{
    int num1=4,num2=5;
    int *ptr1,*ptr2,res;
    ptr1=&num1;
    ptr2=&num2;
    call_fu(ptr1,ptr2);
}
int call_fu(int *p,int *q)
{
    int res;
    res=*p + *q;
    printf("result=%d\n",res);
}

p131
#include<stdio.h>
void call_fu(int *p,int *q);
int main()
{
    int num1=4,num2=5;
    int *ptr1,*ptr2;
    ptr1=&num1;
    ptr2=&num2;
    call_fu(ptr1,ptr2);
}
void call_fu(int *p,int *q)
{
    if(*p>*q)
    {
        printf("%d is the largest number",*p);
    }
    else
        printf("%d is the largest number",*q);

}


