p1
#include <stdio.h> //Header file library
int main() //Function
{
printf("Hello, World!"); // printf() displays the string inside quotation
return 0; //used to indicate end of function
}
output 
Hello, World! 


p2 
#include <stdio.h>
int main()
{   
char name[100];
printf("Enter a sentence:\n");
scanf("%s",&name);
printf("My name is: %s.", name);
return 0;
}
output 
Enter a sentence 
kiran 
My name is kiran


p3(a) 
#include <stdio.h> 
int main() 
{
printf("######\n");
printf("#\n");
printf("#\n");
printf("#####\n");
printf("#\n");
printf("#\n");
printf("#\n");
return(0);
}
output 
######
#
#
#####
#
#
#


p3(b) 
#include <stdio.h> 
int main() 
{
printf("    ######\n");
printf("  ##      ##\n");
printf(" #\n");
printf(" #\n");
printf(" #\n");
printf(" #\n");
printf(" #\n");
printf("  ##      ##\n");
printf("    ######\n");
return(0);
}
output 
 ######
##    ##
#
#
#
#
# 
##     ##
  ######


p4 
#include<stdio.h>
int main() 
{
int num;
printf("Enter the number:\n");
scanf("%d", &num);
printf("The number is %d", num);
return 0;
}
output 
Enter the number: 
7
The number is 7


p5 
#include<stdio.h>
#include<math.h>
int main() 
{
int num, val;
printf("Enter the number:\n");
scanf("%d", &num);
val=sqrt(num);
printf("square root of %d is %d",num,val);
return 0;
}
output 
Enter the number:
49
square root of 49 is 7


p6 
#include<stdio.h>
int main() 
{
int num;
num=7;
printf("The number is %d", num);
return 0;
}
output 
The number is 7


p7 
#include <stdio.h> 
int main() 
{
char char1 = 'X';
char char2 = 'M';
char char3 = 'L';
printf("The reverse of %c%c%c is %c%c%c\n",char1, char2, char3,char3, char2, char1);
return(0);
}
output
The reverse of XML is LMX





