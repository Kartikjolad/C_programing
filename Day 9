p117
#include<stdio.h>
#include<string.h>
void string_len(char name[]);
int main()
{
    char name[50];
    printf("Enter the character:\n");
    scanf("%[^\n]s",name);
    string_len(name);
}
void string_len(char nam[])
{
    int res;
    res=strlen(nam);
    for(int i=0; i<res; i++)
    {
        if(nam[i]==' ')
        {
            nam[i]='@';
        }
    }
    printf("replaced array=%s",nam);

}


p118
#include<stdio.h>
#include<string.h>
string_len(char name[],int len);
int main()
{
    char name[50];
    int len=0;
    printf("Enter the character : ");
    scanf("%s",name);
    while(name[len]!='\0')
    {
        len++;
    }
    string_len(name,len);
}
string_len(char name[],int len)
{
    printf("Reversed string is ");
    for(int i=len-1;i>=0;i--)
    {
        printf("%c",name[i]);
    }

}


p119
#include<stdio.h>
#include<string.h>
void char_rep(char name[],int len,char ch);
int main()
{
    char name[50],ch;
    int len=0;
    printf("Enter the string:\n");
    scanf("%s",name);
    printf("Enter the character in string:\n");
    scanf(" %c",&ch);
    while(name[len]!='\0')
    {
        len++;
    }
    char_rep(name,len,ch);
}
void char_rep(char name[],int len,char ch)
{
    int i,count=0;
    for(i=0;i<len; i++)
    {
        if(name[i]==ch)
        {
            count++;
        }
    }
    printf("%c repeating %d times\n",ch ,count);
}


p120
#include <stdio.h>
#include <stdbool.h>
int main()
{
    char str[20],substr[10];
    printf("Enter a string\n");
    scanf("%s",str);
    printf("Enter the substring\n");
    scanf("%s",substr);
    bool isPresent = false;

    for (int i = 0; str[i] != '\0'; i++)
    {
        isPresent = false;
        for (int j = 0; substr[j] != '\0'; j++)
        {
            if (str[i + j] != substr[j])
            {
                isPresent = false;
                break;
            }
            isPresent = true;
        }
        
        if (isPresent)
        {
            break;
        }
    }
    
    if (isPresent)
    {
        printf("String contains substring.\n");
    }
    else
    {
        printf("String does not contain substring.\n");
    }
    return 0;
}


p121
#include<stdio.h>
#include<string.h>
char sort_fu(char str[]);
int main()
{
    char str[50]="kartik",str2[50];
    printf("String before sorting is: %s\n", str);
    str2[50]=sort_fu(str);
    printf("String after sorting:\n");
    printf("%s",str);
}
char sort_fu(char str[])
{
    int temp=0,i,j;
    for(int i=0; str[i]!='\0'; i++)
    {
        for(int j=i+1; str[j]!='\0'; j++)
        {
            if(str[i]>str[j])
            {
                temp=str[i];
                str[i]=str[j];
                str[j]=temp;
            }
        }
    }
    return str;
}


p122
#include<stdio.h>
#include<string.h>
void string_len(char name[],int len);
int main()
{
    char name[50];
    int len=0;
    printf("Enter the character:\n");
    scanf("%s",name);
//    while(name[len]!='\0')
//    {
//        len++;
//    }
    len=strlen(name);
    string_len(name,len);
}
void string_len(char name[],int len)
{
    int i;
    for(i=0; i<len; i++)
    {
        if(name[i]=='a' || name[i]=='e' || name[i]=='i' || name[i]=='o' || name[i]=='u')
        {
            name[i]-=32;
        }
    }
    printf("%s",name);
}


