#include<string.h>
void string_copy(char name[],char copy_name[]);
int main()
{
    char name[10],copy_name[10];
    printf("Enetr the character:\n");
    scanf("%s",name);
    string_copy(name,copy_name);

}

void string_copy(char name[],char copy_name[])
{
    printf("copied string:\n");
    strcpy(copy_name,name);
    printf("%s",copy_name);
}


