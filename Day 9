p127
#include<stdio.h>
#include<string.h>
int main()
{
    char str[50];
    int count=0,i,len;
    printf("Enter the sentence:\n");
    scanf("%[^\n]s",str);
    len=strlen(str);
    for(i=len-1;str[i]!=' ';i--)
    {
        count++;
    }
    printf("length of the word is %d",count);
}


